.fen{
  overflow: hidden;
}
.fen view{
  float: left;
}
.fen .left{
  width: 30%;
  background-color: #f7f7f5;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 100rpx;
}
.title{
  width: 100%;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  text-align:center;
  color: #999;
}
.active{
  background-color: #036e5e;
  color: #fff;
}
.fen .right{
  width: 70%;
  margin-left: 30%;
  box-sizing: border-box;
  margin-top: 100rpx;
}
.content{
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 14rpx;
  background-color: #eaedf2;
  font-size: 26rpx;
  text-indent: 2em;
  box-sizing: border-box;
}
.content view{
  line-height: 50rpx;
}
.content text{
  font-weight: bold;
  text-indent:2em;
}
.lei view{
  width: 100%;
  font-size: 30rpx;
  height: 90rpx;
  padding:0 24rpx;
  line-height: 90rpx
}
.active2{
  background-color: #fbfbfb;
}
.input{
  overflow: hidden;
  padding-right: 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.input text{
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  float: left;
  width: 20%;
  height: 80rpx;
}
.input input{
  float: left;
  height: 80rpx;
  width: 80%;
  background-color: #f6f6f6;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding:0 30rpx;
  box-sizing: border-box;
}
